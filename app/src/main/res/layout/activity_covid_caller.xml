<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_new"
    android:layout_height="match_parent"
    tools:context=".Covid.SearchResults">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sorry to say but no plasma donors available in your area"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/dm_font"
        android:textColor="#000"
        android:gravity="center"
        android:id="@+id/no_res"
        android:visibility="invisible"
        android:textSize="34sp"/>
    <Button
        android:layout_width="282dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_new"
        android:text="Clear All"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_gravity="right"
        android:fontFamily="@font/dm_font"
        android:layout_marginRight="20dp"
        android:id="@+id/raiser"
        android:textColor="#fff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#88FFFFFF"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:background="@drawable/main_base_btn"
            android:id="@+id/back"
            android:layout_weight="4.9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Plasma Requests For You"
            android:layout_weight="1"
            android:id="@+id/plasma"
            android:fontFamily="@font/dm_font"
            android:textColor="#000"
            android:gravity="center|left"
            android:textSize="20sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:foregroundGravity="center"
        android:id="@+id/results"
        android:layout_marginBottom="70dp"
        />
</RelativeLayout>