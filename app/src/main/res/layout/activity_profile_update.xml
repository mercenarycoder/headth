<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".dashmainadapter$ProfileUpdate">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="40dp"
    android:orientation="vertical">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="311dp"
        android:layout_marginTop="10dp"
        android:layout_height="68dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:hint="Full Name"
            android:id="@+id/name"
            android:background="@drawable/updater"
            android:layout_width="311dp"
            android:layout_height="38dp"
            android:height="0dp"
            android:inputType="text"
            android:textColorLink="#6C6B6B"
          android:textCursorDrawable="@color/graycolor"

            android:layout_marginTop="0dp"
            android:textColorHint="#6C6B6B"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="center"
            />
    </com.google.android.material.textfield.TextInputLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:gravity="center"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:baselineAligned="false"
       android:orientation="horizontal">
       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="91dp"
           android:layout_marginTop="10dp"
           android:layout_height="68dp"
           android:layout_weight="1"
           android:layout_marginRight="6dp"
           >
           <com.google.android.material.textfield.TextInputEditText
               android:hint="Dob"
               android:id="@+id/dob"
               android:background="@drawable/updater"
               android:layout_width="85dp"
               android:layout_height="38dp"
               android:height="0dp"

               android:inputType="text"
               android:textColorLink="#6C6B6B"
             android:textCursorDrawable="@color/graycolor"

               android:layout_marginTop="0dp"
               android:textColorHint="#6C6B6B"
               android:textColor="#000"
               android:textSize="14sp"
               android:layout_weight="1"
               android:paddingStart="5dp"
               android:maxLines="1"
               android:gravity="center"
               />
       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="91dp"
           android:layout_marginTop="10dp"
           android:layout_height="68dp"
           android:layout_weight="1"
           android:layout_marginRight="6dp"
           >

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/height"
               android:layout_width="85dp"
               android:layout_height="38dp"
               android:layout_marginTop="0dp"
               android:layout_weight="1"
               android:height="0dp"

               android:background="@drawable/updater"
               android:gravity="center"
               android:hint="Height"

               android:inputType="text"
               android:maxLines="1"
               android:paddingStart="5dp"
               android:textColor="#000"
               android:textColorHint="#6C6B6B"
               android:textColorLink="#6C6B6B"
               android:textCursorDrawable="@color/graycolor"
               android:textSize="14sp" />
       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="91dp"
           android:layout_marginTop="10dp"
           android:layout_height="68dp"
           android:layout_weight="1"
           android:layout_marginRight="6dp"
           >
           <com.google.android.material.textfield.TextInputEditText
               android:hint="Weight"
               android:id="@+id/weight"
               android:background="@drawable/updater"
               android:layout_width="85dp"
               android:layout_height="38dp"
               android:height="0dp"

               android:inputType="text"
               android:textColorLink="#6C6B6B"
             android:textCursorDrawable="@color/graycolor"

               android:layout_marginTop="0dp"
               android:textColorHint="#6C6B6B"
               android:textColor="#000"
               android:textSize="14sp"
               android:layout_weight="1"
               android:paddingStart="5dp"
               android:maxLines="1"
               android:gravity="center"
               />
       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="91dp"
           android:layout_marginTop="10dp"
           android:layout_height="68dp"
           android:layout_weight="1"
           >
           <com.google.android.material.textfield.TextInputEditText
               android:hint="Blood Group"
               android:id="@+id/blood"
               android:background="@drawable/updater"
               android:layout_width="85dp"
               android:layout_height="38dp"
               android:height="0dp"

               android:inputType="text"
               android:textColorLink="#6C6B6B"
             android:textCursorDrawable="@color/graycolor"

               android:layout_marginTop="0dp"
               android:textColorHint="#6C6B6B"
               android:textColor="#000"
               android:textSize="14sp"
               android:layout_weight="1"
               android:paddingStart="5dp"
               android:maxLines="1"
               android:gravity="center"
               />
       </com.google.android.material.textfield.TextInputLayout>
   </LinearLayout>
    <Button
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn2"
        android:text="Next"
        android:id="@+id/verify"
        android:textColor="#fff"/>
    <ImageView
        android:layout_width="399dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_profileupdate"/>
</LinearLayout>
</RelativeLayout>