<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/b_2"
    android:layout_height="match_parent"
    tools:context=".ProfileUpdate">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="50dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enter Your Details"
        android:textColor="#000"
        android:fontFamily="@font/dm_font"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="68dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:hint="Full Name"
            android:id="@+id/name"
            android:background="@drawable/updater2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:fontFamily="@font/dm_font"
            android:height="0dp"
            android:inputType="text"
            android:textColorLink="#6C6B6B"
          android:textCursorDrawable="@color/graycolor"
            android:layout_marginTop="0dp"
            android:textColorHint="#6C6B6B"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="center"
            />
    </com.google.android.material.textfield.TextInputLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:gravity="center"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:baselineAligned="false"
       android:orientation="horizontal">
       <LinearLayout
           android:layout_width="91dp"
           android:layout_height="68dp"
           android:layout_weight="1"
           android:layout_marginTop="5dp"
           android:gravity="center"
           android:layout_marginRight="6dp"
           android:orientation="vertical">
           <TextView
               android:layout_width="91dp"
               android:layout_height="20dp"
               android:text="Dob"
               android:textSize="12sp"
               android:maxLines="1"
               android:layout_marginBottom="2dp"
               android:paddingStart="0dp"
               android:textColor="#6C6B6B"
               android:gravity="center"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="38dp"
               android:id="@+id/dob"
               android:background="@drawable/updater2"
               android:fontFamily="@font/dm_font"
               android:textSize="14sp"
               android:maxLines="1"
               android:layout_gravity="center"
               android:gravity="center"
               android:paddingStart="5dp"
               android:textColor="#000"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="91dp"
           android:layout_height="68dp"
           android:layout_weight="1"
           android:layout_marginTop="5dp"
           android:gravity="center"
           android:layout_marginRight="6dp"
           android:orientation="vertical">
           <TextView
               android:layout_width="91dp"
               android:layout_height="20dp"
               android:text="Height (cm)"
               android:maxLines="1"
               android:textSize="12sp"
               android:layout_marginBottom="2dp"
               android:paddingStart="0dp"
               android:textColor="#6C6B6B"
               android:gravity="center"/>
           <Spinner
               android:layout_width="match_parent"
               android:layout_height="38dp"
               android:id="@+id/height"
               android:background="@drawable/updater2"
               android:fontFamily="@font/dm_font"
               android:textSize="14sp"
               android:maxLines="1"
               android:layout_gravity="center"
               android:gravity="center"
               android:paddingStart="5dp"
               android:textColor="#000"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="91dp"
           android:layout_height="68dp"
           android:layout_weight="1"
           android:layout_marginTop="5dp"
           android:gravity="center"
           android:layout_marginRight="6dp"
           android:orientation="vertical">
           <TextView
               android:layout_width="91dp"
               android:layout_height="20dp"
               android:text="Weight (Kg)"
               android:maxLines="1"
               android:textSize="12sp"
               android:paddingStart="0dp"
               android:textColor="#6C6B6B"
               android:layout_marginBottom="2dp"
               android:gravity="center"/>
           <Spinner
               android:layout_width="match_parent"
               android:layout_height="38dp"
               android:id="@+id/weight"
               android:background="@drawable/updater2"
               android:fontFamily="@font/dm_font"
               android:textSize="14sp"
               android:layout_gravity="center"
               android:gravity="center"
               android:maxLines="1"
               android:paddingStart="5dp"
               android:textColor="#000"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="91dp"
           android:layout_height="68dp"
           android:layout_weight="1"
           android:layout_marginTop="5dp"
           android:gravity="center"
           android:layout_marginRight="6dp"
           android:orientation="vertical">
           <TextView
               android:layout_width="91dp"
               android:layout_height="20dp"
               android:text="Blood Group"
               android:maxLines="1"
               android:textSize="12sp"
               android:paddingStart="0dp"
               android:layout_marginBottom="2dp"
               android:textColor="#6C6B6B"
               android:gravity="center"/>
           <Spinner
               android:layout_width="match_parent"
               android:layout_height="38dp"
               android:id="@+id/blood"
               android:background="@drawable/updater2"
               android:fontFamily="@font/dm_font"
               android:textSize="14sp"
               android:layout_gravity="center"
               android:gravity="center"
               android:maxLines="1"
               android:paddingStart="5dp"
               android:textColor="#000"/>
       </LinearLayout>

   </LinearLayout>
    <Button
        android:layout_width="82dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn2"
        android:text="Next"
        android:layout_gravity="right"
        android:fontFamily="@font/dm_font"
        android:layout_marginRight="20dp"
        android:id="@+id/verify"
        android:textColor="#fff"/>
    <ImageView
        android:layout_width="399dp"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_profileupdate"/>
</LinearLayout>
</RelativeLayout>