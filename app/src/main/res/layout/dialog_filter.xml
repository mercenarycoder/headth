<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:orientation="vertical"
    android:layout_height="490dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_close"
        android:id="@+id/close_dialog"
        android:background="@drawable/main_base_btn"
        android:layout_weight="5.7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/dm_font"
        android:gravity="center|left"
        android:text="Filter"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_marginBottom="15dp"
        android:textSize="14sp"
        android:fontFamily="@font/dm_font"
        android:textColor="#000"
        android:gravity="center"/>
<LinearLayout
    android:layout_width="250dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:id="@+id/all"
        android:background="@drawable/edit_text"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:src="@drawable/ic_head"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="All"
            android:layout_weight="1"
            android:fontFamily="@font/dm_font"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/eye"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edit_text"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:src="@drawable/ic_eye"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Eye"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/dm_font"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="250dp"
    android:layout_height="70dp"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/dental"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:src="@drawable/dental_final"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dental"
            android:layout_weight="1"
            android:fontFamily="@font/dm_font"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/ent"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edit_text"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:src="@drawable/ic_ear"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ENT"
            android:layout_weight="1"
            android:fontFamily="@font/dm_font"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:id="@+id/blood"
            android:background="@drawable/edit_text"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:src="@drawable/ic_blood" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Blood"
                android:fontFamily="@font/dm_font"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:id="@+id/xray"
            android:background="@drawable/edit_text"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:src="@drawable/x_ray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="X-Ray"
                android:fontFamily="@font/dm_font"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort By"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        android:textColor="#000"
        android:fontFamily="@font/dm_font"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest to Oldest"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dm_font"
            android:textSize="13sp"
            android:id="@+id/latest"
            android:textColor="#000"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oldest to Latest"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dm_font"
            android:textSize="13sp"
            android:id="@+id/oldest"
            android:textColor="#000"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Added By Me"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:fontFamily="@font/dm_font"
            android:textColor="#000"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>