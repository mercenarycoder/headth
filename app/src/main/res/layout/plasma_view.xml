<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/prescribtion"
        android:layout_margin="0dp"
        android:background="@drawable/edit2"
        android:baselineAligned="false"
        android:layout_height="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/name"
                    android:textColor="#089BAB"
                    android:text="Manjeet Singh Pal"
                    android:fontFamily="@font/dm_font"

                    android:gravity="left"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age:34 , Blood:A+"
                android:fontFamily="@font/dm_font"
                android:gravity="left|center"
                android:layout_marginLeft="0dp"
                android:id="@+id/data"
                android:textSize="13sp"
                android:textColor="#F40B5B"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age:34 , Blood:A+"
                android:fontFamily="@font/dm_font"
                android:gravity="left|center"
                android:layout_marginLeft="0dp"
                android:id="@+id/data2"
                android:textSize="13sp"
                android:textColor="#F40B5B"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/mobile"
                android:textColor="#545454"
                android:text=" Mobile:- 7389438159"

                android:fontFamily="@font/dm_font"
                android:gravity="left"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal"
                android:baselineAligned="false"
                >

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/phone_call"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:id="@+id/call"
                    android:tint="#089BAB"
                    android:textColor="#089BAB"
                    android:background="#fff"/>
            </LinearLayout>

    </LinearLayout>
</RelativeLayout>