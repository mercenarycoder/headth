<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="344dp"
    android:orientation="vertical"
    android:background="@drawable/back_new"
    android:layout_height="330dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#88FFFFFF"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Medicine *"
            android:fontFamily="@font/dm_font"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="17dp"
            android:gravity="center|left"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.9"
            android:background="@drawable/main_base_btn"
            android:id="@+id/close_btn2"
            android:src="@drawable/ic_close"
            />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="311dp"
        android:layout_marginTop="4dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:hint="Name"
            android:id="@+id/name"
            android:background="@drawable/updater"
            android:layout_width="311dp"
            android:layout_height="38dp"
            android:height="0dp"
            android:inputType="text"
            android:fontFamily="@font/dm_font"
            android:textColorLink="#6C6B6B"
            android:textCursorDrawable="@color/graycolor"
            android:layout_marginTop="0dp"
            android:textColorHint="#6C6B6B"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="center|left"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="311dp"
        android:layout_marginTop="4dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:hint="Purpose"
            android:id="@+id/purpose"
            android:background="@drawable/updater"
            android:layout_width="311dp"
            android:layout_height="38dp"
            android:fontFamily="@font/dm_font"
            android:height="0dp"
            android:inputType="text"
            android:textColorLink="#6C6B6B"
            android:textCursorDrawable="@color/graycolor"
            android:layout_marginTop="0dp"
            android:textColorHint="#6C6B6B"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="center|left"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Duration(in months)"
                android:id="@+id/duration"
                android:background="@drawable/updater"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:height="0dp"
                android:inputType="number"
                android:fontFamily="@font/dm_font"
                android:textColorLink="#6C6B6B"
                android:textCursorDrawable="@color/graycolor"
                android:layout_marginTop="0dp"
                android:textColorHint="#6C6B6B"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:maxLines="1"
                android:gravity="center|left"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="6dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Dosage(pills per day)"
                android:id="@+id/dosage"
                android:background="@drawable/updater"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:height="0dp"
                android:inputType="number"
                android:textColorLink="#6C6B6B"
                android:textCursorDrawable="@color/graycolor"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/dm_font"
                android:textColorHint="#6C6B6B"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:maxLines="1"
                android:gravity="center|left"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/bootstrap_primary"
        android:text="Add"
        android:layout_gravity="center"
        android:id="@+id/add"
        android:fontFamily="@font/dm_font"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:textColor="#41b5c1"/>
</LinearLayout>