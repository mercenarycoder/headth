<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/prescribtion"
    android:layout_margin="4dp"
    android:background="@drawable/edit2"
    android:baselineAligned="false"
    android:layout_height="70dp">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2.7"
    android:padding="10dp"
    android:src="@drawable/ic_pdf"
    android:id="@+id/img"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/diesease"
            android:textColor="#089BAB"
            android:text="Malaria Test"
            android:layout_weight="0.7"
            android:gravity="left"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24/06/20"
            android:gravity="right"
            android:id="@+id/date"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textColor="#F40B5B"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/dr_name"
            android:textColor="#545454"
            android:text=" Diagnosed by: Dr. S Meena"
            android:layout_weight="0.3"
            android:gravity="left"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:textSize="12sp"
            android:textColor="#089BAB"
            android:background="#fff"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>