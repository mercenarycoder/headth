<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".Report.ReportView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:background="@drawable/main_base_btn"
            android:id="@+id/back"
            android:layout_weight="6"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Prescription"
            android:fontFamily="@font/dm_font"
            android:layout_weight="1"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center|left"
            android:textSize="32sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Malaria"
            android:layout_weight="1"
            android:fontFamily="@font/dm_font"
            android:id="@+id/title"
            android:layout_marginLeft="44dp"
            android:textColor="#000"
            android:gravity="center|left"
            android:textSize="22sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Diagnosed By-"
                android:layout_weight="2.2"
                android:textColor="#000"
                android:fontFamily="@font/dm_font"
                android:gravity="center|left"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Dr.Ajaay Verma"
                android:layout_weight="1"
                android:id="@+id/doctor"
                android:paddingStart="0dp"
                android:fontFamily="@font/dm_font"
                android:textColor="@color/colorPrimary"
                android:gravity="center|left"
                android:textSize="18sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="500dp"
            android:src="@drawable/ic_pdf"
            android:padding="15dp"
            android:id="@+id/report"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="15dp"

            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Share"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/share"
                android:fontFamily="@font/dm_font"
                android:drawableRight="@drawable/ic_share"
                android:background="@drawable/mainbtn2"
                android:textSize="16sp"/>
            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Download"
                android:background="@drawable/mainbtn2"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:id="@+id/download"
                android:fontFamily="@font/dm_font"
                android:layout_marginRight="20dp"
                android:drawableRight="@drawable/ic_download"
                android:gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progress"/>
    <WebView
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@color/black"
        android:src="@drawable/ic_pdf"
        android:padding="15dp"
        android:id="@+id/web"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>
</RelativeLayout>