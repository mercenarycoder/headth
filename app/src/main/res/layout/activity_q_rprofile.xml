<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/b_2"
    android:layout_height="match_parent"
    tools:context=".Qr.QRprofile">
<ScrollView
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Emergency Health Card"
        android:textColor="@color/black"
        android:fontFamily="@font/dm_font"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Blood Group"
            android:textColor="#000"
            android:fontFamily="@font/dm_font"
            android:gravity="center"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:layout_weight="0.9"
            android:id="@+id/blood"
            android:fontFamily="@font/dm_font"
            android:gravity="center|left"
            android:textColor="#333333"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Age" android:layout_marginBottom="0dp"
           android:textColor="#000"
            android:gravity="center"
            android:fontFamily="@font/dm_font"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:layout_weight="1.1"
            android:id="@+id/age"
            android:gravity="center"
            android:fontFamily="@font/dm_font"
            android:textColor="#333333"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/diesease_recycler"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/disease"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:textColor="#fff"
                android:id="@+id/disease_2"
                android:src="@drawable/ic_disease"
                android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/round_btn"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="Disease"
                android:textColor="#000"
                android:textSize="12sp"
                android:fontFamily="@font/dm_font"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/medicine_recycler"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/medicine"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:text="S"
                    android:textColor="#fff"
                    android:layout_marginTop="2dp"
                    android:textSize="20sp"
                    android:src="@drawable/ic_medicine"
                    android:gravity="center"
                    android:id="@+id/medicine_2"
                    android:layout_gravity="center"
                    android:background="@drawable/round2"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="Medicine"
                    android:textColor="#000"
                    android:fontFamily="@font/dm_font"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/allergy_recycler"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/allergies"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="55dp"
                    android:layout_height="50dp"
                    android:text="S"
                    android:textColor="#fff"
                    android:src="@drawable/ic_medicine"
                    android:layout_marginTop="2dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/allergies_2"
                    android:layout_gravity="center"
                    android:background="@drawable/round3"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="Allergies"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:fontFamily="@font/dm_font"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="Call Ambulance"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/dm_font"
                android:id="@+id/ambulance"
                android:background="@drawable/btn_new"
                android:textColor="#fff"
                android:padding="4dp"
                android:textSize="12sp"
                />
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="Call Police"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn1"
                android:textColor="#fff"
                android:fontFamily="@font/dm_font"
                android:id="@+id/police"
                android:padding="4dp"
                android:textSize="12sp"
                />
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="Call Family"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn2"
                android:fontFamily="@font/dm_font"
                android:textColor="#fff"
                android:id="@+id/family"
                android:padding="4dp"
                android:textSize="12sp"
                />
        </LinearLayout>
</LinearLayout>
</ScrollView>
</RelativeLayout>