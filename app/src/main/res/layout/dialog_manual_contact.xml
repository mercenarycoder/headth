<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Enter Contact Detail"
            android:fontFamily="@font/dm_font"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="17dp"
            android:gravity="center|left"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.9"
            android:background="#fff"
            android:id="@+id/close_btn2"
            android:src="@drawable/ic_close"
            />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="291dp"
        android:layout_marginTop="0dp"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:id="@+id/height1"
        android:layout_gravity="center"
        android:layout_marginRight="6dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:hint="Full Name"
            android:id="@+id/name"
            android:background="@drawable/updater2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:height="0dp"
            android:inputType="text"
            android:fontFamily="@font/dm_font"
            android:textColorLink="#6C6B6B"
            android:textCursorDrawable="@color/graycolor"
            android:layout_marginTop="0dp"
            android:textColorHint="#6C6B6B"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="center"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="291dp"
        android:layout_marginTop="0dp"
        android:layout_height="68dp"
        android:layout_weight="1"
        android:id="@+id/height2"
        android:layout_gravity="center"
        android:layout_marginRight="6dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:hint="Phone Number"
            android:id="@+id/phone"
            android:background="@drawable/updater2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:height="0dp"
            android:inputType="phone"
            android:fontFamily="@font/dm_font"
            android:textColorLink="#6C6B6B"
            android:textCursorDrawable="@color/graycolor"
            android:layout_marginTop="0dp"
            android:textColorHint="#6C6B6B"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_weight="1"
            android:maxLength="10"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:gravity="center"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn2"
        android:fontFamily="@font/dm_font"
        android:gravity="center"
        android:id="@+id/submit"
        android:layout_gravity="center"/>
</LinearLayout>