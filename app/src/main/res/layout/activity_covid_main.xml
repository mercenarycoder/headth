<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back_new"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="androidi.developer.headthapp.Covid.CovidMain">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#88FFFFFF"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            android:background="@drawable/main_base_btn"
            android:id="@+id/back"
            android:layout_weight="4.9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:layout_weight="1"
            android:fontFamily="@font/dm_font"
            android:textColor="#000"
            android:gravity="center|left"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:baselineAligned="false"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="My Covid Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/dm_font"
            android:textColor="#000"
            />
        <TableRow
            android:layout_width="262dp"
            android:layout_height="0.79dp"
            android:background="#000"
            android:layout_marginTop="10dp"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/main_curve"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/dm_font"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/recovery"
                android:layout_gravity="center"
                android:paddingStart="4dp"
                android:text="Recovery Certificate \n (Or latest negative RT-PCR report)"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Upload"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_weight="1.3"
                android:id="@+id/upload_c"
                android:fontFamily="@font/dm_font"
                android:background="@drawable/btn2"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:textStyle="bold"
                android:background="@drawable/mainbtn2"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:id="@+id/download_c"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_font"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_close"
                android:gravity="center"
                android:textSize="10sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="Vaccination Certificate"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center|left"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/dm_font"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/dm_font"
                android:textSize="15sp"
                android:id="@+id/shot1"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingStart="4dp"
                android:text="1st Shot"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Upload"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_weight="1.3"
                android:textAllCaps="false"
                android:id="@+id/upload_1"
                android:fontFamily="@font/dm_font"
                android:background="@drawable/btn2"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:textStyle="bold"
                android:background="@drawable/mainbtn2"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:id="@+id/download_1"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_font"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_close"
                android:gravity="center"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/dm_font"
                android:textSize="15sp"
                android:id="@+id/shot2"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingStart="4dp"
                android:text="2nd Shot"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Upload"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_weight="1.3"
                android:textAllCaps="false"
                android:id="@+id/upload_2"
                android:fontFamily="@font/dm_font"
                android:background="@drawable/btn2"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text=""
                android:textStyle="bold"
                android:background="@drawable/mainbtn2"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:id="@+id/download_2"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_font"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_close"
                android:gravity="center"
                android:textSize="10sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="Covid Information"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/dm_font"
            android:textColor="#000"
            />
        <Button
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:text="Search for Blood Plasma"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/search_1"
            android:fontFamily="@font/dm_font"
            android:background="@drawable/btn2"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:text="Volunteer for Plasma Donation"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/search_2"
            android:fontFamily="@font/dm_font"
            android:background="@drawable/btn_new"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
<!--    </ScrollView>-->
</LinearLayout>